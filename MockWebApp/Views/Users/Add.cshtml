@model MockWebApp.Models.UserVM

<style>
    .hero-text h1 {
        font-size: 2.5rem;
        color:#D4AF37;
    }

    .hero-text p {
        font-size: 1.2rem;
        margin: 1rem 0;
        color: #D4AF37;
    }

    body {
        line-height: 1.6;
        background-color: #000435;
        color:#D4AF37
    }
</style>

<section class="hero">
    <div class="hero-text">
        <h1>Athlete Registration</h1>
        <p>Fill in the information required below to save an athlete to the portal</p>
    </div>
</section>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" required/>
    </div>

    <div class="mt-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" asp-for="Password" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Team Name</label>
        <input type="text" class="form-control" asp-for="Team" required/>
    </div>

    <div class="mt-3">
        <label class="form-label">Jersey Number</label>
        <input type="number" class="form-control" asp-for="Jersey" required/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>