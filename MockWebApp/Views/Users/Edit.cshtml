@{
}

@model MockWebApp.Models.Entities.User

@if (Model is null)
{
    <p>No student found</p>
}
else
{

    <section class="hero">
        <div class="hero-text">
            <h1>Edit Athlete Information</h1>
        </div>
    </section>

    <form method="post">
        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="UserName" />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="UserEmail"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" asp-for="UserPassword" />
        </div>

        <div class="mt-3">
            <label class="form-label">Team Name</label>
            <input type="text" class="form-control" asp-for="UserTeam" />
        </div>

        <div class="mt-3">
            <label class="form-label">Jersey Number</label>
            <input type="number" class="form-control" asp-for="UserJersey" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Users">Delete</button>
        </div>

    </form>
}}
<style>
        .hero-text h1 {
            font-size: 2.5rem;
            color: #D4AF37;
        }

        .hero-text p {
            font-size: 1.2rem;
            margin: 1rem 0;
            color: #D4AF37;
        }

        body {
            line-height: 1.6;
            background-color: #000435;
            color: #D4AF37;
        }

        button {
            background-color: #D4AF37;
            color: #fff;
        }
    </style>