@{
    ViewData["Title"] = "Select Team";
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Sports Website</title>
        <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
        }

        body {
            line-height: 1.6;
            background-color: #000435;
            color: #D4AF37;
            height: 140vh;
        }

        header {
            background: #D4AF37;
            color: #fff;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 1.5rem;
        }

        nav ul {
            list-style: none;
            display: flex;
        }

            nav ul li {
                margin-left: 1rem;
            }

                nav ul li a {
                    color: #fff;
                    text-decoration: none;
                }

        .cta {
            background: #D4AF37;
            color: #fff;
            padding: 0.5rem 1rem;
            text-decoration: none;
            border-radius: 5px;
        }

        .hero {
            background: url('images/hero.jpg') no-repeat center center/cover;
            height: 60vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #fff;
            text-align: center;
        }

        .hero-text h1 {
            font-size: 2.5rem;
        }

        .hero-text p {
            font-size: 1.2rem;
            margin: 1rem 0;
        }

        section {
            padding: 2rem 0;
            text-align: center;
        }

        h2 {
            margin-bottom: 1rem;
        }

        .events, .news, .team-grid, .testimonial-carousel, .sponsor-logos {
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .event-card, .news-card, .team-card, .testimonial-card {
            background: #fff;
            padding: 1rem;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 30%;
        }

            .event-card img, .news-card img, .team-card img, .testimonial-card img {
                max-width: 100%;
                border-radius: 5px;
            }

        .sponsor-logos img {
            max-width: 10%;
            margin: 0 1rem;
            width: 50px;
            height: 50px;
        }

        .newsletter form {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .newsletter input {
            padding: 0.5rem;
            font-size: 1rem;
            border: 1px solid #fff;
            border-radius: 5px 0 0 5px;
        }

        .newsletter button {
            padding: 0.5rem 1rem;
            font-size: 1rem;
            border: none;
            background: #D4AF37;
            color: #fff;
            border-radius: 0 5px 5px 0;
        }

        footer {
            background: #D4AF37;
            color: #fff;
            padding: 1rem 2rem;
            text-align: center;
        }

            footer .quick-links, footer .social-media, footer .contact-info {
                margin-bottom: 1rem;
            }

            footer a {
                color: #fff;
                text-decoration: none;
                margin: 0 0.5rem;
            }

        /* Optional CSS for styling */
        .image-grid {
            display: grid;
            grid-template-columns: repeat(6, 1fr); /* 3 columns of equal width */
            gap: 10px; /* Gap between grid items */
            padding: 10px; /* Padding around the grid */
            
        }

        }

        .image-grid-item {
            border: 1px solid #ccc; /* Optional: border around each grid item */
            padding: 10px; /* Optional: padding inside each grid item */
            width: 100%; /* Ensure images fill their grid items */
            display: block; /* Remove extra spacing below images */

        }
        </style>
        </head>
        
<body>

    <h2>Select Items:</h2>

    <form id="itemForm">
        <input type="checkbox" id="item1" name="item" value="Item 1">
        <label for="item1">Item 1</label><br>

        <input type="checkbox" id="item2" name="item" value="Item 2">
        <label for="item2">Item 2</label><br>

        <input type="checkbox" id="item3" name="item" value="Item 3">
        <label for="item3">Item 3</label><br>

        <input type="checkbox" id="item4" name="item" value="Item 4">
        <label for="item4">Item 4</label><br>

        <input type="checkbox" id="item5" name="item" value="Item 5">
        <label for="item5">Item 5</label><br>
    </form>

    <div class="selected-items">
        <h2>Selected Items:</h2>
        <ul id="selectedList"></ul>
    </div>

    <script>
        // JavaScript to handle checkbox selection
        var checkboxes = document.querySelectorAll('input[name="item"]');
        var selectedList = document.getElementById('selectedList');

        checkboxes.forEach(function (checkbox) {
            checkbox.addEventListener('change', function () {
                if (this.checked) {
                    // Add item to selected list
                    var listItem = document.createElement('li');
                    listItem.textContent = this.value;
                    selectedList.appendChild(listItem);
                } else {
                    // Remove item from selected list if unchecked
                    var items = selectedList.getElementsByTagName('li');
                    for (var i = 0; i < items.length; i++) {
                        if (items[i].textContent === this.value) {
                            items[i].remove();
                            break;
                        }
                    }
                }
            });
        });
    </script>

</body>
</html>




