    </table>

    <div class="add-program">
        <button onclick="navigateToSelectTeam()">Add New Program</button>
    </div>

    <script>
        function navigateToSelectTeam() {
            window.location.href = 'selectteam.html';  // Ensure this file exists in the same directory
        }
    </script>
    </body>
</html>