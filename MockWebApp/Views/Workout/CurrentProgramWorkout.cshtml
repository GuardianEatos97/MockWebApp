
@{
    ViewData["Title"] = "CurrentProgramWorkout";
}

<body>
    <div class="align-self-sm-center">
        <div class="title-color">
            <h1>Current Program Workout</h1>
        </div>

        <div class="scrollable-list-container">
            <ul class="scrollable-list">
                <li>
                    <label for="checkbox1">
                        <input type="checkbox" id="checkbox1" name="checkbox1" value="option1">
                            Strength and Conditioning
                    </label>
                </li>
                <li>
                    <label for="checkbox2">
                        <input type="checkbox" id="checkbox2" name="checkbox2" value="option2">
                        Agility
                    </label>
                </li>
                <li>
                    <label for="checkbox3">
                        <input type="checkbox" id="checkbox3" name="checkbox3" value="option3">
                        Forwards Workouts
                    </label>
                </li>
                <li>
                    <label for="checkbox4">
                        <input type="checkbox" id="checkbox4" name="checkbox4" value="option4">
                        Backline Workouts
                    </label>
                </li>
                <li>
                    <label for="checkbox5">
                        <input type="checkbox" id="checkbox5" name="checkbox5" value="option5">
                        Scrumhalf Workouts
                    </label>
                </li>
            </ul>
        </div>

        <!-- In CurrentProgramWorkout.cshtml -->
        @using (Html.BeginForm("BodyPartSelect", "Workout", FormMethod.Get))
        {
            <input class="button" type="submit" value="Add Workout Program" />
        }
    </div>
</body>




