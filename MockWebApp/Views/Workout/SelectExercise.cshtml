
@{
    ViewData["Title"] = "SelectExercise";
}
<div class="select-exercise">
    <p>Select exercises from the list below</p>
</div>

<style>
    /* Optional CSS for styling */
    ul {
        list-style-type: none; /* Removes default list styling */
        padding: 0;
    }

    li {
        margin-bottom: 5px;
    }
</style>

<div class="scrollable-list-container">
    <ul class="scrollable-list">
        <li>
            <label for="checkbox1">
                <input type="checkbox" id="checkbox1" name="checkbox1" value="option1">
                Deadlifts
            </label>
        </li>
        <li>
            <label for="checkbox2">
                <input type="checkbox" id="checkbox2" name="checkbox2" value="option2">
                Squats
            </label>
        </li>
        <li>
            <label for="checkbox3">
                <input type="checkbox" id="checkbox3" name="checkbox3" value="option3">
                Bench Press
            </label>
        </li>
        <li>
            <label for="checkbox4">
                <input type="checkbox" id="checkbox4" name="checkbox4" value="option4">
                Shoulder Press
            </label>
        </li>
        <li>
            <label for="checkbox5">
                <input type="checkbox" id="checkbox5" name="checkbox5" value="option5">
                Leg Press
            </label>
        </li>
    </ul>
</div>

<!-- In CurrentProgramWorkout.cshtml -->
@using (Html.BeginForm("SelectTeamAndPreview", "Workout", FormMethod.Get))
{
    <input class="center-button" type="submit" value="Add Exercises" />
}
<style>
    header {
        background: #D4AF37;
        color: #fff;
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    body {
        line-height: 1.6;
        background-color: #000435;
        color: #D4AF37;
    }

    .select-exercise{
        color:#D4af37;
        text-align:center;
        font-family: 'Roboto', sans-serif;
        font-size: 1.5rem;
    }

    .scrollable-list-container {
        max-height: 400px;
        width: auto;
        border: 1px solid #D4AF37;
        padding: 1rem;
        background-color: white;
        overflow-y: scroll;
    }

    .scrollable-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .scrollable-list li {
        padding: 8px;
        border-bottom: 1px solid #ddd;
    }

    .scrollable-list li:last-child {
        border-bottom: none;
    }

    .center-button {
        display: block;
        width: 40%;
        margin: 1em auto;
        height: 1em;
        font-size: 1.2rem;
        background-color: #D4AF37;
        border-width: 3px;
        border-color: white;
        color: white;
        min-width: 200px;
        min-height: 50px;
        text-align: center;
        border-radius: 10px;
    }

</style>


