
@{
    ViewData["Title"] = "SelectExercise";
}



<h1>SelectExercise</h1>
<p>Select an exercise from the list below</p>
<div class="scrollable-list-container">
    <ul class="scrollable-list">
        <li>Deadlift</li>
        <li>Squat</li>
        <li>Bench Press</li>
        <li>Shoulder Press</li>
        <li>Leg Press</li>
    </ul>
</div>

<button class="center-button" type="button">Add Exercises</button>
<style>
    .scrollable-list-container {
        max-height: 400px;
        width: auto;
        border: 1px solid #000;
        padding: 1rem;
        overflow-y: scroll;
    }


    .scrollable-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

        .scrollable-list li {
            padding: 8px;
            border-bottom: 1px solid #ddd;
        }

            .scrollable-list li:last-child {
                border-bottom: none;
            }

    .center-button {
        border: 1px solid #000;
        border-radius: 5px;
        padding: 0.5rem 1rem;
        margin-top: 1rem;
        text-align: center;
    }

</style>


